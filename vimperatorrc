js <<EOS
var vacuum = function() {
	Components.classes["@mozilla.org/browser/nav-history-service;1"].getService(Components.interfaces.nsPIPlacesDatabase).DBConnection.executeSimpleSQL("VACUUM");
	alert('DB Vacuumed');
}

var toggleProxy = function() {
  let pref = 'network.proxy.type';
	let type = '1' == options.getPref(pref) ? 0 : 1;
	options.setPref(pref, type);
	liberator.echo(pref + ' = ' + type);
}
EOS

echo "init script loaded."

