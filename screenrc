#termcap kterm* KJ=euc:G0
#defkanji euc
defutf8 on
#encoding utf8
#defencoding utf8
startup_message off
autodetach on
#escape ^\\\
escape ^jj

termcapinfo xterm*|rxvt*|kterm*|Eterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'
defhstatus "screen ^E (^Et) | $USER@^EH"
hardstatus off

#hardstatus alwayslastline "%?%{yk}%-Lw%?%{wb}%n*%f %t%?(%u)%?%?%{yk}%+Lw%?"
