## [include] path = ~/.dotfiles/gitconfig
[core]
	filemode = false
	editor = vim
	ignorecase = false
	autocrlf = input
	excludesfile = ~/.dotfiles/gitignore
	whitespace = cr-at-eol
	pager = diff-so-fancy | less -FXRi
[commit]
	template = ~/.dotfiles/gitmessage.txt
[alias]
	st = status
	br = branch
	ci = commit
	co = checkout
	pur = pull --rebase
	prune = fetch --prune
	abort = checkout -- .
	wait = reset HEAD
	undo = reset --soft HEAD^
	amend = commit --amend --no-edit
#
	l = log --pretty=oneline --abbrev-commit --graph --decorate
	changelog = "!sh -c \"git log --oneline --no-merges $1..HEAD\" -"
#
	df = !sh -c 'git diff --ignore-space-change --stat -p -w --color $*' -
	wdf = !sh -c 'git diff --word-diff --stat -p -w --color $*' -
	l  = !git log --graph --color
	diffarchive = !git diff master.. --name-only | xargs git archive --format=zip -v HEAD > diffarchive.zip
	export = !git archive --format=zip -v HEAD > archive.zip
	ghpage = subtree push --prefix dist origin gh-pages
	prune = pull --prune
[diff]
	compactionHeuristic = true
[color]
	ui = true
[user]
	name = Tosh Satake
	email = 2sm@csc.jp
[push]
	default = current
[tig]
	tab-size = 2
	main-view-author = no
# vim: ft=gitconfig
