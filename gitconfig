## [include] path = ~/.dotfiles/gitconfig
[core]
	filemode = false
	editor = vim
	ignorecase = false
	autocrlf = false
[alias]
	st = status
	br = branch
	ci = commit
	co = checkout
	df = !sh -c 'git diff --stat -p -w --color $* | $PAGER' -
	wdf = !sh -c 'git diff --word-diff --stat -p -w --color $* | $PAGER' -
	l  = !git log --graph --color | $PAGER
	diffarchive = !git diff master.. --name-only | xargs git archive --format=zip -v HEAD > diffarchive.zip
	export = !git archive --format=zip -v HEAD > archive.zip
	ghpage = subtree push --prefix dist origin gh-pages
	prune = pull --prune
[color]
	ui = true
[user]
	name = Tosh Satake
	email = 2sm@csc.jp

# vim: ft=gitconfig
[push]
	default = simple
