## [include] path = ~/.dotfiles/gitconfig
[core]
	filemode = false
	editor = vim
	ignorecase = false
	autocrlf = input
	excludesfile = ~/.dotfiles/gitignore
	whitespace = cr-at-eol
	pager = delta
[commit]
	template = ~/.dotfiles/gitmessage.txt
[alias]
	st = status -sb
	br = branch -vv
	ci = commit
	co = checkout
	pu = push -u origin HEAD
	pur = pull --rebase --prune --autostash
	prune = fetch --prune
	abort = checkout -- .
	wait = reset HEAD
	undo = reset --soft HEAD^
	amend = commit --amend --no-edit
	sync = fetch . develop:master
#
	l = log --pretty=oneline --abbrev-commit --graph --decorate
	ls = log --simplify-by-decoration --all --pretty=oneline --abbrev-commit --graph --decorate
	changelog = "!sh -c \"git log --oneline --no-merges $1..HEAD\" -"
#
	df = !sh -c 'git diff --ignore-space-change --stat -p -w --color $*' -
	wdf = !sh -c 'git diff --word-diff --stat -p -w --color $*' -
	diffarchive = !git diff master.. --name-only | xargs git archive --format=zip -v HEAD > diffarchive.zip
	export = !git archive --format=zip -v HEAD > archive.zip
	ghpage = subtree push --prefix dist origin gh-pages
	nuke = !sh -c 'git branch -D $1 && git push origin :$1' -
	search = !sh -c 'git log --all --grep=$0'
	diffdump = "!f() { git show $1:$2 > new.$(basename $2); git show $1^:$2 > old.$(basename $2); }; f"
[diff]
	compactionHeuristic = true
[color]
	ui = true
[user]
	name = Tosh Satake
	email = 2sm@csc.jp
[push]
	default = current
[tig]
	tab-size = 2
	main-view-author = no
[tig "bind"]
	main = T ?git tag %(prompt) %(commit)
	main = ! ?git nuke %(branch)
# vim: ft=gitconfig
